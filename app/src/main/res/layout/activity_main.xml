<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="0"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.cardview.widget.CardView
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="@id/image_user"
            app:layout_constraintBottom_toBottomOf="@id/image_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            android:clickable="true"
            app:cardElevation="0dp"
            android:focusable="true"
            android:visibility="gone"
            app:cardBackgroundColor="@color/background"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/_13sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp">
            <ImageView
                android:src="@drawable/ic_go_left"
                android:padding="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_user"
            app:layout_constraintLeft_toRightOf="@id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:layout_constraintHorizontal_bias="0.01"
            android:src="@drawable/logo"

            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"/>
        <TextView
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="@id/image_user"
            app:layout_constraintLeft_toRightOf="@id/image_user"
            app:layout_constraintBottom_toBottomOf="@id/image_user"
            app:layout_constraintRight_toLeftOf="@id/settings"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintVertical_bias="0"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal"
            android:maxLines="1"
            android:text="Eshmurodov Dostonbek"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/type"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toRightOf="@id/name"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintBottom_toBottomOf="@id/image_user"
            android:text="Idea Center"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/hint_color"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/settings"
            app:layout_constraintTop_toTopOf="@id/image_user"
            app:layout_constraintBottom_toBottomOf="@id/image_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_width="@dimen/_30sdp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/background"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardElevation="0dp"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment"
        android:background="@color/background"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"/>
    <include
        android:id="@+id/include"
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/camera"
        layout="@layout/loading_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>